<div class="main">

  <div class="container">

      <div class="row">
        
        <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>All Mobile Devices</h3>
            </div> <!-- /widget-header -->
        
              <div class="widget-content">
              
                <div class="row-fluid">
                  <div class="span12">
                  
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
              
                      <tr>
                        <td>&nbsp;</td>
                        <td>
                          <%#= link_to "Back", root_path, :class => "btn"%>
                          <%= link_to "Add mobile device", new_mobile_device_path, :class=>"btn", :type=>"reset"%>
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </div>
                </div>
                </br>
                <section id="tables">
                  
                    <table class="table table-bordered table-striped">
                      
                              <thead>
                                <tr>
                                  <th>Sr. No. </th>
                                  <th>IMEI</th>
                                  <th>Manufacturer Name</th>
                                  <th>Phone Number</th>
                                  <th>Purchase Date</th>
                                  <% if current_user.has_role? :admin %>
                                    <th>Edit User</th>
                                    <th>Delete User</th>
                                  <% end %>
                                </tr>
                              </thead>
                            <% @mobile_devices.each_with_index.each do |mobile_device,i |  %> 
                              <tbody>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= mobile_device.imei rescue nil%></td>
                                  <td><%= mobile_device.manufacturer_name rescue nil%></td>
                                  <td><%= mobile_device.phone_no rescue nil%></td>
                                  <td><%= mobile_device.purchase_date rescue nil%></td>
                                  <% if current_user.has_role? :admin %>
                                    <td><%= link_to "Edit", edit_mobile_device_path(mobile_device) %></td>
                                    <td><%= link_to "Delete", mobile_device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  <% end %>
                                </tr>
                              </tbody>
                      <% end %> 
                    </table>
                         
                          
                         

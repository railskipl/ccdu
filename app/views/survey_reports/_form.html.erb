<div class="main">
  <div class="container">
    <div class="row">
      <div class="span12">          
        <div class="widget stacked ">
          <div class="widget-header">
            <i class="icon-pencil"></i>
            <h3>Survey Reports</h3>
          </div> <!-- /widget-header -->
          <div class="widget-content">
            <div style="margin-bottom:10px" class="row-fluid">
              <!-- <div class="span12">
                <a href="<%= admin_blocks_path%>" class="btn">Back</a>          
              </div> -->
            </div>
            <%= form_for  @survey_report, :html => {:id => "survey_report",:class => "form-horizontal"}  do |f| %>
              <% if @survey_report.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@survey_report.errors.count, "error") %> prohibited this from being saved:</h2>
                  <ul>
                    <% @survey_report.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <fieldset>
                <div class="control-group">
                  <label for="name" class="control-label">Block Name</label>
                  <div class="controls">
                    <%= f.text_field :source_name , :class => "input-large",:readonly => true%>
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Code</label>
                  <div class="controls">
                    <%= f.text_field :water_source_code , :class => "input-large"%>
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Nearest Milestone</label>
                  <div class="controls">
                    <%= f.text_field :source_location,:class => "input-large"%>
                  </div>
                </div>
                <!-- <div class="control-group">
                  <label for="name" class="control-label">Habitation</label>
                  <div class="controls">
                    <%= f.text_field :habitation, :class => "input-large" %>
                  </div>
                </div> -->
                
                <div class="control-group">
                  <label for="name" class="control-label">Habitation</label>
                  <div class="controls">
                    <%= f.text_field :village , :class => "input-large"%>
                    
                  </div>
                </div>

                <div class="control-group">
                  <label for="name" class="control-label">Grampanchyat/Village</label>
                  <div class="controls">
                    <%= f.text_field :grampanchayat, :class => "input-large"%>
                    
                  </div>
                </div>

                <div class="control-group">
                  <label for="name" class="control-label">Source Type</label>
                  <div class="controls">
                    <%= f.select :water_source_type, WaterSourceType.all.map{|s| [s.source_type, s.source_type]},{:prompt => "Select Source Type"} %>
                    <%#= f.text_field :water_source_type, :class => "input-large"%>
                    
                  </div>
                </div>

                <div class="control-group">
                  <label for="name" class="control-label">Surveyor Name</label>
                  <div class="controls">
                    <%= f.text_field :surveyor_name, :class => "input-large", :readonly => true%>
                    
                  </div>
                  
                </div>
                <div class="control-group">
                  <div class="controls">
                    <%= f.submit "Submit", :class => "btn"%>
                  </div>
                </div>
                
              </fieldset>
            <%end%>
          </div> <!-- /widget-content -->
        </div> <!-- /widget -->
      </div>
    </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->




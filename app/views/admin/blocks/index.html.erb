  </tr>

<% @admin_blocks.each do |admin_block| %>
  <tr>
    <td><%= admin_block.block_name rescue nil%></td>
    <td><%= admin_block.district.district_name rescue nil%></td>
    <td><%= link_to 'Show', admin_block %></td>

<div class="main">

  <div class="container">

      <div class="row">
        
        <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>All Blocks</h3>
            </div> <!-- /widget-header -->
        
              <div class="widget-content">
              
                <div class="row-fluid">
                  <div class="span12">
                  
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
              
                      <tr>
                        <td>&nbsp;</td>
                        <td>
                          <%= link_to "Back", admin_root_path, :class => "btn"%>
                          <%= link_to "New Block", new_admin_block_path, :class=>"btn", :type=>"reset"%>
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </div>
                </div>
                </br>
                <section id="tables">
                  
                    <table class="table table-bordered table-striped">
                      
                              <thead>
                                <tr>
                                  <th>Sr. No. </th>
                                  <th>Block name</th>
                                  <th>District</th>
                                  <th>View</th>
                                  <th>Edit User</th>
                                  <th>Delete User</th>
                                </tr>
                              </thead>
                            <% @admin_blocks.each_with_index.each do |admin_block,i |  %> 
                              <tbody>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= admin_block.block_name rescue nil%></td>
                                  <td><%= admin_block.district.district_name rescue nil%></td>
                                  <% if current_user.has_role? :admin %>
                                    <td><%= link_to "View", admin_block_path(admin_block) %></td>
                                    <td><%= link_to (image_tag "image.jpg" ,:height => "22", :width => "20"), edit_admin_block_path(admin_block) %></td>
                                    <td><%= link_to (image_tag "delete.png" ,:height => "22", :width => "20"), admin_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  <% end %>
                                </tr>
                              </tbody>
                      <% end %> 
                    </table>
                         
                          
                         
                  <section id="paginations">
                    
                    
                    <div class="pagination">
                      <ul>
                        <li><a href="javascript:;">Prev</a></li>
                        <li class="active">
                          <a href="javascript:;">1</a>
                        </li>
                        <li><a href="javascript:;">2</a></li>
                        <li><a href="javascript:;">3</a></li>
                        <li><a href="javascript:;">4</a></li>
                        <li><a href="javascript:;">Next</a></li>
                      </ul>
                    </div>
                            
                  </section>
                </section>
              </div> <!-- /widget-content -->
          </div> <!-- /widget -->
        </div>
      </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->
    



<div class="main">

  <div class="container">

      <div class="row">
        
        <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>All Districts</h3>
            </div> <!-- /widget-header -->
        
              <div class="widget-content">
              
                <div class="row-fluid">
                  <div class="span12">
                  
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
              
                      <tr>
                        <td>&nbsp;</td>
                        <td>
                          <%#= link_to "Back", admin_root_path, :class => "btn"%>
                          <%= link_to "New District", new_admin_district_path, :class=>"btn", :type=>"reset"%>
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </div>
                </div>
                </br>
                <section id="tables">
                  
                    <table class="table table-bordered table-striped">
                      
                              <thead>
                                <tr>
                                  <th>Sr. No. </th>
                                  <th>District name</th>
                                  <th>Code</th>
                                  <th>Is Laboratory Present ?</th>
                                  <th>Laboratory Name</th>
                                  <th>Zone Name</th>
                                  <% if current_user.has_role? :admin %>
                                    <th>Edit </th>
                                    <th>Delete </th>
                                  <% end %>
                                </tr>
                              </thead>
                            <% @admin_districts.each_with_index.each do |admin_district,i |  %> 
                              <tbody>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= admin_district.district_name rescue nil%></td>
                                  <td><%= admin_district.code rescue nil%></td>
                                  <td><%= admin_district.lab_present rescue nil%></td>
                                  <td><%= admin_district.lab_name rescue nil%></td>
                                  <td><%= admin_district.zone.zone_name rescue nil%></td>
                                  <% if current_user.has_role? :admin %>
                                    <td><%= link_to "Edit", edit_admin_district_path(admin_district) %></td>
                                    <td><%= link_to "Delete", admin_district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  <% end %>
                                </tr>
                              </tbody>
                      <% end %> 
                    </table>
                         
                          
                         

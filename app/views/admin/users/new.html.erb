<div class="main">
  <div class="container">
    <div class="row">
      <div class="span12">          
        <div class="widget stacked ">
          <div class="widget-header">
            <i class="icon-pencil"></i>
            <h3>New User</h3>
          </div> <!-- /widget-header -->
          <div class="widget-content">
            <div style="margin-bottom:10px" class="row-fluid">
              <!-- <div class="span12">
                <a href="<%= admin_users_path%>" class="btn">Back</a>          
              </div> -->
            </div>
            <%= form_for [:admin, @user], :html => {:multipart => true,:class => "form-horizontal"} do |f| %>
              <% for message in @user.errors.full_messages %>
                <%= message %>
              <% end %>
              <fieldset>
                
                <div class="control-group">
                  <label for="name" class="control-label">Full Name</label>
                  <div class="controls">
                    <%= f.text_field :user_fullname ,:placeholder=>"Full Name" , :class => "input-large"%>
                  </div>
                </div>

                <div class="control-group">
                  <label for="name" class="control-label">User Name</label>
                  <div class="controls">
                    <%= f.text_field :username ,:placeholder=>"User Name" , :class => "input-large"%>
                  </div>
                </div>

                <div class="control-group">
                  <label for="name" class="control-label">Email</label>
                  <div class="controls">
                    <%= f.email_field :email ,:placeholder=>"Email" , :class => "input-large"%>
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Password</label>
                  <div class="controls">
                    <%= f.password_field :password ,:placeholder=>"Password" , :class => "input-large"%>
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Confirm Password</label>
                  <div class="controls">
                    <%= f.password_field :password_confirmation ,:placeholder=>"Confirm Password" , :class => "input-large"%>
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Select Role</label>
                  <div class="controls">
                    <%= f.collection_select :role_ids, Role.find(:all, :conditions => ['name not in (?, ?)', 'admin', 'mobile']) ,:id,:display_name, :prompt => "Select Role" %>
                  </div>
                </div>
                
                <div class="control-group">
                  <label for="name" class="control-label">Select Zone</label>
                  <div class="controls">

                    <%= f.collection_select :zone_name, Admin::Zone.all ,:zone_name,:zone_name, :prompt => "Select Zone" %>
                    <%= f.collection_select :district_name, Admin::District.all ,:district_name,:district_name, :prompt => "Select District" %>
                    <%= f.collection_select :block_name, Admin::Block.all ,:block_name,:block_name, :prompt => "Select Block" %><br/>
                    please enter area according to role belongs
                  </div>
                </div>
                <div class="control-group">
                  <label for="name" class="control-label">Mobile Number</label>
                  <div class="controls">
                    <%= f.text_field :mobile_no ,:placeholder=>"Mobile Number" , :class => "input-large"%>
                  </div>
                  <%= f.hidden_field :status , :value => true%>
                </div>
                <div class="control-group">
                  <div class="controls">
                    <%= f.submit "Submit",:name => "admin_create", :class => "btn"%>
                  </div>
                </div>
              </fieldset>
            <%end%>
          </div> <!-- /widget-content -->
        </div> <!-- /widget -->
      </div>
    </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->



<br/><%= link_to "Back", admin_root_path%><br/><br/>

<%= link_to "New User", new_admin_user_path%><br/><br/>

<table>
  <tr>
    <th>User Name</th>
    <th>User Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.username rescue nil%></td>
    <td><%= user.roles.map { |e| e.display_name  } rescue nil%></td>
    <% if current_user.has_role? :admin %>
       <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
       <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>


<br/><%= link_to "Back", admin_root_path%><br/><br/>

<%= form_for([:admin, @user], :html => { :multipart => true }) do |f| %>
<% for message in @user.errors.full_messages %>
<%= message %>
<% end %>
<p><%= f.text_field :username, :placeholder=>"User Name" %></p>
<p><%= f.text_field :user_ID, :placeholder=>"User ID" %></p>
<p><%= f.email_field :email, :placeholder=>"Email" %></p>
<p><%= f.password_field :password, :placeholder=>"Password" %></p>
<p><%= f.password_field :password_confirmation, :placeholder=>"Confirm Password" %></p>
<%= f.collection_select :role_ids, Role.find(:all, :conditions => ['name not in (?)', 'admin']) ,:id,:display_name, :prompt => "Select Role" %>
<p><%= f.text_field :mobile_no, :placeholder=>"Mobile Number" %></p>
  


<p><%= f.submit "Update" , :name => "admin_create" %></p>
<% end %>
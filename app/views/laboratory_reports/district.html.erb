<%= stylesheet_link_tag "facebox.css" %>

<%= javascript_include_tag "facebox.js", "jquery.validate.min" %>

<div class="main">
  <div class="container">
    <div class="row">
      <div class="span12">          
        <div class="widget stacked ">
          <div class="widget-header">
            <i class="icon-pencil"></i>
            <h3>Laboratory Report</h3>
          </div> <!-- /widget-header -->
          <div class="widget-content">
            <div class="row-fluid">
              <div class="span12">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                  <%= form_tag laboratory_reports_path ,:method => :get do %>
                  <tr>
                    <td>From Date </td>
                    <td><span class="controls">
                      <%= text_field_tag :start_date %>
                    </span></td>
                    <td>To Date </td>
                    <td><span class="controls">
                      <%= text_field_tag :end_date %>
                       </span>
                    </td>
                    <td>Water Source </td>
                    <td><span class="controls">
                      <%= collection_select :source_name, :source_name_eq, SurveyReport.all, :source_name, :source_name ,{:prompt => "Select Source Name"}%>
                      </span>
                    </td>
                  </tr>
                  <tr>
                    <td>Types</td>
                    <td><span class="controls">
                      <%= collection_select :water_source_type, :water_source_type_eq, SurveyReport.all, :water_source_type, :water_source_type, {:prompt => "Select Source Type"} %>
                      </span>
                    </td>
                    <td>Habitation</td>
                    <td><span class="controls">
                      <!-- <select name="select">
                        <option>Bedal</option>
                            </select> -->
                      </span>
                    </td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                  </tr>
                  <tr>
                    <td>&nbsp;</td>
                    <td>
                      <%= submit_tag "Search" %>
                      <!-- <button class="btn btn btn-primary" type="reset">Show</button> -->
                      <!-- <button class="btn btn btn-primary" type="reset">Clear</button> -->
                      
                    </td>
                      <td>&nbsp;</td>
                      <td>&nbsp;</td>
                      <td>&nbsp;</td>
                      <td>&nbsp;</td>
                  </tr>
                 <% end %>
                </table>
              </div>
            </div>
            </br>
            <section id="tables">
              <div class="row-fluid">
                <div class="span6">
                  <h3>LABORATORY REPORT</h3>
                </div>
                <div class="span6" style="text-align:right">
                  <%= link_to image_tag('/assets/excel.png', :border=>"0", :align=>"absmiddle") + " Excel", laboratory_reports_path(params.merge(format: "xls")), :method=> :get, :class=>"btn btn-secondary" %>
                  <%= link_to image_tag('/assets/pdf.png', :border=>"0", :align=>"absmiddle") + " PDF", laboratory_reports_path(params.merge(format: "pdf")), :method=> :get, :class=>"btn btn-secondary" %>
                   
                </div>
              </div>
              
              <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Sr. No. </th>
                    <th>Sample Code</th>
                    <th>pH</th>
                    <th>TDS</th>
                    <th>Residual Chlorine</th>
                    <th>Fluoride</th>
                    <th>Chloride</th>
                    <th>Nitrate</th>
                    <th>Alkaliniy</th>
                    <th>Total Hardness</th>
                    <th style="width:20%">Action</th>
                  </tr>
                </thead>
                 <tbody>
                <% @survey_reports.each_with_index.each do |survey_report,i |  %> 
                 
                    <tr id="<%= dom_id(survey_report) %>">
                      <td><%= i+1 %></td>
                      <td><%= survey_report.water_source_code rescue nil%></td>
                      <td><%= survey_report.ph rescue nil%></td>
                      <td><%= survey_report.tds rescue nil%></td>
                      <td><%= survey_report.residual_chlorine rescue nil%></td>
                      <td><%= survey_report.fluoride rescue nil%></td>
                      <td><%= survey_report.chloride rescue nil%></td>
                      <td><%= survey_report.nitrate rescue nil%></td>
                      <td><%= survey_report.alkaliniy rescue nil%></td>
                      <td><%= survey_report.total_hardness rescue nil%></td>
                      <td><div style="float:left; margin-right:3px;"><%= link_to "View", laboratory_report_path(survey_report), :class=>"btn" %> </div>
                          <div style="float:left">
                          <%= link_to "Accept", accept_laboratory_report_path(survey_report), remote: true, :class=>"btn" %>
                          <%= link_to "Reject", reject_laboratory_report_path(survey_report), remote: true, :class=>"btn" %>
                          </div>
                      </td>
                    </tr>
                <% end %> 
                </tbody>
              </table>
              <section id="paginations">
                <div class="digg_pagination">
                  <%#= will_paginate @survey_reports %>
                </div>
              </section>
            </section>
          </div> <!-- /widget-content -->
        </div> <!-- /widget -->
      </div>
    </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->
    







  <div class="container">

      <div class="row">
        
        <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>Water Source Type</h3>
            </div> <!-- /widget-header -->
        
              <div class="widget-content">
              
                <div class="row-fluid">
                  <div class="span12">
                  
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
              
                      <tr>
                        <td>&nbsp;</td>
                        <td>
                          <%#= link_to "Back", admin_root_path, :class => "btn"%>
                          <%= link_to "New Water Source Type", new_water_source_type_path, :class=>"btn", :source_type=>"reset"%>
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </div>
                </div>
                </br>
                <section id="tables">
                  
                    <table class="table table-bordered table-striped">
                      
                              <thead>
                                <tr>
                                  <th>Sr. No. </th>
                                  <th>Water Source Type</th>
                                  <% if current_user.has_role? :admin %>
                                  <th>Edit</th>
                                  <th>Delete</th>
                                  <% end %>
                                </tr>
                              </thead>
                            <% @water_source_types.each_with_index.each do |water_source_type,i |  %> 
                              <tbody>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= water_source_type.source_type rescue nil%></td>
                                  <% if current_user.has_role? :admin %>
                                    <td><%= link_to "Edit", edit_water_source_type_path(water_source_type),:class => "btn" %></td>
                                    <td><%= link_to "Delete", water_source_type, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn" %></td>
                                  <% end %>
                                </tr>
                              </tbody>
                      <% end %> 
                    </table>
                         
                          
                         

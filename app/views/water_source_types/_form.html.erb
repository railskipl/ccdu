<script>
  jQuery(document).ready(function() {
    jQuery("#water_source_type").validate({
      errorElement:'div',
      rules: {
        "water_source_type[source_type]" : { required: true }
        },
      messages: {
          "water_source_type[source_type]":{ required:  "Please enter water source type." }
        }
        
         
      });
  });
</script>
<div class="main">
  <div class="container">
    <div class="row">
      <div class="span12">          
        <div class="widget stacked ">
          <div class="widget-header">
            <i class="icon-pencil"></i>
            <h3>Water Source Type</h3>
          </div> <!-- /widget-header -->
          <div class="widget-content">
            <div style="margin-bottom:10px" class="row-fluid">
              <!-- <div class="span12">
                <a href="<%= admin_zones_path%>" class="btn">Back</a>          
              </div> -->
            </div>
            <%= form_for @water_source_type, :html => {:id => "water_source_type",:class => "form-horizontal"} do |f| %>
              <% if @water_source_type.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@water_source_type.errors.count, "error") %> prohibited this water_source_type from being saved:</h2>
                  <ul>
                    <% @water_source_type.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <fieldset>
                <div class="control-group">
                  <label for="name" class="control-label">Water source type</label>
                  <div class="controls">
                    <%= f.text_field :source_type , :class => "input-large"%>
                  </div>
                </div>
                <div class="control-group">
                  <div class="controls">
                    <%= f.submit "Submit", :class => "btn"%>
                  </div>
                </div>
              </fieldset>
            <%end%>
          </div> <!-- /widget-content -->
        </div> <!-- /widget -->
      </div>
    </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->

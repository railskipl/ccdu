<%= form_for(@mobile_user) do |f| %>
  <% if @mobile_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mobile_user.errors.count, "error") %> prohibited this mobile_user from being saved:</h2>

      <ul>
      <% @mobile_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.with_role(:mobile), :id , :username, :prompt => "Select User" rescue nil %>
  </div>
  <div class="field">
    <%= f.label :imei %><br />
    <%= f.collection_select :imei , MobileDevice.all, :imei, :imei , :prompt => "Select IMEI" rescue nil%>
  </div>
  
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
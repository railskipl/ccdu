<div class="main">

  <div class="container">

      <div class="row">
        
        <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>All Mobile Users</h3>
            </div> <!-- /widget-header -->
        
              <div class="widget-content">
              
                <div class="row-fluid">
                  <div class="span12">
                  
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
              
                      <tr>
                        <td>&nbsp;</td>
                        <td>
                          <%= link_to "Back", root_path, :class => "btn"%>
                          <%= link_to "Add mobile User", new_mobile_user_path, :class=>"btn", :type=>"reset"%>
                        </td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </div>
                </div>
                </br>
                <section id="tables">
                  
                    <table class="table table-bordered table-striped">
                      
                              <thead>
                                <tr>
                                  <th>Sr. No. </th>
                                  <th>IMEI</th>
                                  <th>Manufacturer Name</th>
                                  <% if current_user.has_role? :block %>
                                  <th>Edit</th>
                                  <th>Delete</th>
                                  <% end %>
                                </tr>
                              </thead>
                            <% @mobile_users.each_with_index.each do |mobile_user,i |  %> 
                              <tbody>
                                <tr>
                                  <td><%= i+1 %></td>
                                  <td><%= mobile_user.imei rescue nil%></td>
                                  <td><%= mobile_user.user.username rescue nil%></td>
                                  <% if current_user.has_role? :block %>
                                    <td><%= link_to (image_tag "image.jpg" ,:height => "22", :width => "20"), edit_mobile_user_path(mobile_user) %></td>
                                    <td><%= link_to (image_tag "delete.png" ,:height => "22", :width => "20"), mobile_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  <% end %>
                                </tr>
                              </tbody>
                            <% end %> 
                    </table>
                         
                          
                         
                  <section id="paginations">
                    
                    
                    <div class="pagination">
                      <ul>
                        <li><a href="javascript:;">Prev</a></li>
                        <li class="active">
                          <a href="javascript:;">1</a>
                        </li>
                        <li><a href="javascript:;">2</a></li>
                        <li><a href="javascript:;">3</a></li>
                        <li><a href="javascript:;">4</a></li>
                        <li><a href="javascript:;">Next</a></li>
                      </ul>
                    </div>
                            
                  </section>
                </section>
              </div> <!-- /widget-content -->
          </div> <!-- /widget -->
        </div>
      </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /main -->
    





